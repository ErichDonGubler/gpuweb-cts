#!/usr/bin/env node

// Get the current git hash, and save (overwrite) it into out/framework/version.js
// so it can be read when running inside the browser.

require('../src/tools/setup-ts-in-node.js');
const fs = require('fs');

if (!fs.existsSync('tools/gen_version')) {
  console.error('Must be run from repository root');
  usage(1);
}

const { version } = require('../src/tools/version');

// Overwrite the version.js generated by TypeScript compilation.
fs.writeFileSync(
  './out/framework/version.js',
  `\
export const version = '${version}';
`
);

// Since the generate version.js was overwritten, its source map is no longer relevant.
try {
  fs.unlinkSync('./out/framework/version.js.map');
} catch (ex) {}
